
<div>
    <canvas id="pie-chart" width=100 height=60></canvas>
</div>
<br /><br /><br /><br /><br /><br /><br />
<div>
    <canvas id="bar-chart" width=100 height=60></canvas>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>	


	<script type="text/javascript">
		// Bar chart
new Chart(document.getElementById("bar-chart"), {
    type: 'bar',
    data: {
      labels: ["0€-5000€", "5000€-25000€", "25000€-50000€", "50000€-100000€", "100000€+"],
   
      datasets: [
        {
          label: "Salary Class",
          backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f","#e8c3b9","#c45850"],
            
              data: [(@Model.SalaryClass1_count), (@Model.SalaryClass2_count), (@Model.SalaryClass3_count), (@Model.SalaryClass4_count), (@Model.SalaryClass5_count)]         
        }
      ]
    },
    options: {
      
      title: {
        display: true,
        text: 'Players per Salary Class'
      }
    }
});
new Chart(document.getElementById("pie-chart"), {
    type: 'pie',
    data: {
      labels: ["Goalkeepers", "Defenders", "Midfielders", "Forwards"],
      datasets: [{
        label: "position",
        backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f","#e5c3b9","#4c45fs", "#9e83dw", "#2e20ad", "#1e90sv", "#7u20ad", "#6u39sf"],
        data: [(@Model.Goalkeepers_count), (@Model.Centreback_count+@Model.Leftback_count+@Model.Rightback_count), (@Model.Central_Midfielder_count+@Model.Defensive_Midfielder_count+@Model.Playmaker_count), (@Model.Centre_forward_count+@Model.Leftwinger_count+@Model.Rightwinger_count)]
      }]
    },
    options: {
      title: {
        display: true,
        text: 'Players per Position'
      }
    }
    
});	
	</script>

